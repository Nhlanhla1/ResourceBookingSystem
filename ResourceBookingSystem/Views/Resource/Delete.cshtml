@model ResourceBookingSystem.Models.Resource
@{
    ViewData["Title"] = "Delete Resource";
}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Resource
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-warning me-2"></i>
                    Are you sure you want to delete this resource? This action cannot be undone and will also delete all associated bookings.
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Name:</strong></p>
                        <p class="text-muted">@Model.Name</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Location:</strong></p>
                        <p class="text-muted">
                            <i class="fas fa-map-marker-alt me-1"></i>
                            @(string.IsNullOrEmpty(Model.Location) ? "Not specified" : Model.Location)
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Capacity:</strong></p>
                        <p class="text-muted">
                            <i class="fas fa-users me-1"></i>
                            @Model.Capacity people
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Status:</strong></p>
                        <p class="text-muted">
                            <span class="status-badge @(Model.IsAvailable ? "status-available" : "status-unavailable")">
                                @if (Model.IsAvailable)
                                {
                                    <i class="fas fa-check-circle me-1"></i>
                                    @:Available
                                }
                                else
                                {
                                    <i class="fas fa-times-circle me-1"></i>
                                    @:Unavailable
                                }
                            </span>
                        </p>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="row">
                        <div class="col-12">
                            <p><strong>Description:</strong></p>
                            <p class="text-muted">@Model.Description</p>
                        </div>
                    </div>
                }
                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Yes, Delete Resource
                        </button>
                        <a class="btn btn-secondary" href="@Url.Action("Index")">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                        <a class="btn btn-outline-info" href="@Url.Action("Details", new { id = Model.Id })">
                            <i class="fas fa-eye me-2"></i>View Details
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>